<%= form_for :user, url: {action: 'update'} do |form| %>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Correo electr√≥nico</th>
        <th>Perfil</th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <%= fields_for "user[]", user do |user_fields| %>
        <tr>
          <td><%= "#{user.first_name} #{user.last_name}" %></td>
          <td><%= "#{user.email}" %></td>
          <td><%= user_fields.collection_select :role, User::ROLES, :to_s, :humanize, prompt: true %></td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>

  <%= submit_tag "Grabar", class: 'btn btn-primary' %>

<% end %>
