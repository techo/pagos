<h2>Registrarse</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= form_error_messages %>

  <div class="control-group">
    <%= f.label :first_name, "Nombre:", class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_name, :autofocus => true, class: 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :last_name, "Apellido:", class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, class: 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, "Correo electrónico:", class: 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, class: 'text_field' %>
    </div>
  </div>
    
  <div class="control-group">
    <%= f.label :password, "Contraseña:", class: 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, class: 'text_field' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :password_confirmation, "Confirmar contraseña:", class: 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, class: 'text_field' %>
    </div>
  </div>

  <%= f.submit "Registrarse", class: 'btn btn-primary' %>

<% end %>
